{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "strict": true,
        "declaration": true,
        "esModuleInterop": true,
        "lib": [
            "es2016",
            "dom" /* DOM necessary for browser build */
        ],
        "types": [
            "node",
            "jest"
        ],
        "outDir": "dist",
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node"
    },
    "exclude": ["node_modules", "dist", "**/*.test.ts"]
}